<!DOCTYPE html>
<html lang="es-mx">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Facturacion</title>
    <link rel="stylesheet" href="##">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="fact1.js"></script>
</head>

<body>
    <div class="container mt-5">

        <div class="row">
            <div class="col-8 offset-2">
                <form id="formulario" class="p-3 mt-5 shadow border">
                    <h2 class="text-center text-primary">REPORTE MENSUAL</h2>
                    <label for="nombre">Nombres trabajador</label>
                    <input id="nombre" class="form-control my-2" type="text" placeholder="Ingrese nombres">
                    
                    <label for="apellido">Apellidos trabajador</label>
                    <input id="apellido" class="form-control my-2" type="text" placeholder="Ingrese apellidos">

                    <label for="turno">Turno</label>
                    <input id="turno" class="form-control my-2" type="text" placeholder="Turno">

                    <label for="Especificacion-carnes">Especificacion carnes</label>
                    <input id="Especificacion-Carnes" class="form-control my-2" type="text" placeholder="Turno">

                    <label for="lacteos">Especificacion Lacteos</label>
                    <input id="lacteos" class="form-control my-2" type="text" placeholder="">

                    <label for="Especificacion-Harinas">Especificacion Harinas</label>
                    <input id="Harinas" class="form-control my-2" type="text" placeholder="">

                    <label for="Especificacion-Miscelaneos">Especificacion Miscelaneos</label>
                    <input id="Miscelaneos" class="form-control my-2" type="text" placeholder="">
                    <button class="btn btn-primary my-2" type="submit">Mostrar Datos</button>
                </form>
                <hr>
                <div class="nuevo">
                    <form >
                <h3 id="respuesta" class="text-center fw-light"></h3>
                    </form>
                </div>

                <script>
                    const formulario = document.querySelector("#formulario");
                    formulario.addEventListener("submit", validarFormulario)

                    function validarFormulario(e) {
                        e.preventDefault();
                        const turno = document.querySelector("#turno").value
                        const nombre = document.querySelector("#nombre").value;
                        const apellido = document.querySelector("#apellido").value;
                        const lacteos = document.querySelector("#lacteos").value;
                        const carnes = document.querySelector("#Especificacion-Carnes").value;
                        const harinas = document.querySelector("#Harinas").value;
                        const Miscelaneos= document.querySelector("#Miscelaneos").value;

                        const respuesta = document.getElementById("respuesta");
                        respuesta.textContent = "Bienvenido" + "  "+ nombre + "   " +  "   " + apellido + "    " +  "    " +"turno : "+  "            "+ turno + "   "+
                        "Su registro ha sido generado correctamente" +"   "+"  "+ "CARNES : " + carnes + "        "+
                        + "     "+   "     "+ "     " + "LACTEOS : " +  lacteos + "     " + "Harinas : " + harinas + "        "+ "Miscelaneos:   " + Miscelaneos;
                    }

                


                </script>

            </div>
        </div>
</body>