<!DOCTYPE html>
<html lang="es-mx">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/publico/css/registro.css">
  <title>Login</title>
</head>
<body>
  <div class="contenedor">
    <div class="-xs-10 col-sm-4 col-md-6">
      <img src="/publico/imagenes/login/logotipOf.png" class="avatar" alt="Avatar Image">
      <h1>Inicio de Sesión</h1>
        <!-- INPUT  NOMBRE DE USUARIO-->
        <label for="username">Nombre de usuario</label>
        <input type="text" placeholder="Ingrese nombre de usuario" name="nombre" id="nombre" required>
        <label for="username">Matricula</label>
        <input type="number" placeholder="Ingrese su matricula" name="matricula" id="matricula" required>
        <!-- INPUT CONTRASEÑA   onclick="login()"-->
        <label for="password">Contraseña</label>
        <input type="number" placeholder="Ingrese contraseña" name="password" id="password" required>
        <input type="button" value="Ingresar" onclick="login()">
        <input type="button" value="Registrarse" onclick="registro()">
    </div>
    <label for="nombre" id="nombre" name="nombre"></label>
    <label for="contra" id="contra" name="contra"></label>
  </div>

</body>

<script>
  function registro() {
    setTimeout(function () {
      window.location = '/registro'
    }, 5000)
  }

  function login() {
    const url = "http://localhost:3000/";
    let nombre = document.getElementById('nombre').value;
    if(nombre == ""){
      nombre = "L"
    }
    let matricula = document.getElementById('matricula').value;
    if(matricula == ""){
      matricula = 1
    }
    let pass = document.getElementById('password').value;
    if(pass == ""){
      pass = 1
    }
    fetch(`${url}login_api?nombre=${nombre}&&matricula=${matricula}&&contrasena=${pass}`, {
      method: 'GET'
    })
      .then(res => res.json()
      )
      .then(response => {
        if (JSON.stringify(response.redirect != null && response.redirect != undefined)) {
           document.querySelector('#nombre').innerHTML = JSON.stringify(response.redirect[0].nombre)
           document.querySelector('#contra').innerHTML = JSON.stringify(response.redirect[0].matricula)
           document.querySelector('#contra').innerHTML = JSON.stringify(response.redirect[0].contrasena)
           window.location = '/menu'
        } else {
          document.querySelector('#nombre').innerHTML = "No hay datos";
          window.location = '/'
        }
      })
      .catch(function (error) {
        console.log(error)
        window.location = '/registro'
      })
  }
</script>

</html>