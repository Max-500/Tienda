<body>
    <h3>BUSCADOR DE ELEMENTOS</h3>
    <input type="text">
</body>

<script>
    function buscar() {
      const url = "http://localhost:3000/";
      let nombre = document.getElementById('nombre').value
      let cantidad = document.getElementById('cantidad').value
      let precio = document.getElementById('precio').value
      let marca = document.getElementById('marca').value
      if(nombre != "" && cantidad != "" && precio != "" && marca != ""){
        fetch(`${url}anadir_api?nombre=${nombre}&&cantidad=${cantidad}&&precio=${precio}&&marca=${marca}`, {
        method: 'POST'
      })
        .then(res => res.json()
        )
        .then(response => {
          const status = response["status"];
  
          if (status) {
            alert('Se realizo perfectamente')
            window.location = '/menu'
          }else{
            alert('No se pudo realizar el registro')
            window.location = '/anadir'
          }
        })
        .catch(function (error) {
          alert('Falla en el sistema')
          console.log(error)
        })
      }else{
        alert('No has ingresado datos')
        window.location = '/menu'
      }
    }
  </script>

